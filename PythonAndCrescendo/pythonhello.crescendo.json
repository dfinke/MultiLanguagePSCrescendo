{
    "$schema": "../Microsoft.PowerShell.Crescendo.Schema.json",
    "Verb": "Get",
    "Noun": "HelloPython",
    "OriginalName": "$PSScriptRoot/hello.py",
    "Parameters": [
        {
            "Name":"Name",
            "ParameterType": "string",
            "Description": "Just a string"
        },
        {
            "Name":"Age",
            "ParameterType": "string",
            "Description": "Just a number"
        }
    ],    
    "OutputHandlers": [
        {
            "ParameterSetName": "Default",
            "Handler": "
            $h = [ordered]@{}
            foreach($item in $input) {
                $k,$v = $item -split '='
                $h.$k=$v.trim()
            }
            [pscustomobject]$h
            ",
            "StreamOutput": true
        }
    ]
}